{
  "name": "nicoSlide",
  "version": "1.0.2",
  "description": "",
  "main": "main.js",
  "scripts": {
    "dev": "electron main.js",
    "start": "electron .",
    "build": "electron-packager . WallTube --platform=darwin --arch=x64 --electron-version=4.0.1 --icon=img/icon.icns",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "publish": "electron-builder --mac -p always"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Im-neko/nico-slide.git"
  },
  "dependencies": {
    "electron-log": "^3.0.9",
    "electron-updater": "^4.2.0"
  },
  "devDependencies": {
    "electron": "^4.1.4",
    "electron-builder": "^20.38.5"
  },
  "build": {
    "appId": "nicoSlide",
    "mac": {
      "category": "presentation support",
      "target": [
        "zip",
        "dmg"
      ],
      "publish": [
        {
          "provider": "github",
          "owner": "im-neko",
          "repo": "nico-slide"
        }
      ]
    }
  },
  "bugs": {
    "url": "https://github.com/Im-neko/nico-slide/issues"
  },
  "homepage": "https://github.com/Im-neko/nico-slide#readme",
  "author": "im-neko",
  "license": "MIT"
}
